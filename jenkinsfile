pipeline {
    agent any
    stages {
        stage ("print") {
            steps {
                sh 'echo $USER'
                sh 'cat /etc/passwd'
            }
        }
        stage ("Cloning code from SCM") {
            steps {
                echo "Pulling Code"
                git branch: 'dev', url: 'https://github.com/ishunrzb09/Business_manage.git'
            }
        }

        stage ("Building Docker image") {
            steps {
                echo "Building Docker Images"
                sh 'sudo docker build -t ishunrzb09/${JOB_NAME}:${BUILD_NUMBER} .' 
            }
        }

        stage ("Login Into Docker Registry") {
            steps {
                echo "Login Into Docker Registry"
                sh 'sudo docker login'
            }
        }
        stage ("Publishing Docker Images into Public Registry") {
            steps {
                echo "Publishing Docker Images into Public Registry"
                sh 'sudo docker push ishunrzb09/${JOB_NAME}:${BUILD_NUMBER}'
            }
        }
    }
}